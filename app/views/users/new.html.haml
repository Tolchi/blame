.container
  .hero-unit
    =form_for @user do |f|
      -if @user.errors.any? 
        %div{ :class => 'error_message'}
          %ul
            =@user.errors.full_messages.each do |m|
              %li
                =m

      =f.label :email
      =f.text_field :email

      =f.label :password
      =f.text_field :password

      =f.label :password_confirmation
      =f.text_field :password_confirmation

      =f.submit
